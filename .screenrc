autodetach on
bell_msg "^G"
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8
defscrollback 10000
escape ^Zz
startup_message off
vbell off
caption always "%{= Wk} %-w%{=b kw}%n %t%{-}%+w %= %{=b Wk} [%l]"
bind n screen
bind h prev
bind j next
bind l windowlist
defbce on

# For useful scroll
termcapinfo xterm* ti@:te@
